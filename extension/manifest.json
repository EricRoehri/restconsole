{
    "version": "5.0.0",
    "manifest_version": 2,

    "name": "__MSG_name__",
    "description": "__MSG_description__",

    "icons": {
        "16": "images/16.png",
        "19": "images/19.png",
        "32": "images/32.png",
        "48": "images/48.png"
    },

    "default_locale": "en",

    "browser_action": {
        "default_icon": "images/19.png",
        "default_title": "__MSG_title__"
    },

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "homepage_url": "http://www.restconsole.com",

    "offline_enabled": true,

    "permissions": [
        "tabs",
        "management"
    ]
}
