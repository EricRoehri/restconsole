{
    "version": "4.1.0",
    "manifest_version": 2,

    "name": "__MSG_name__",
    "description": "__MSG_description__",

    "icons": {
        // favicon
        "16": "images/logo/16.png",
        // chrome://extensions
        "48": "images/logo/48.png",
        // webstore
        "128": "images/logo/128.png"
    },

    "default_locale": "en",

    "app": {
        "launch": {
            "local_path": "index.html"
        }
    },

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    // TODO: do we need this?
    // http://developer.chrome.com/extensions/sandboxingEval.html
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "homepage_url": "http://www.restconsole.com",

    "incognito": "spanning",

    // TODO: add intents?

    "offline_enabled": true,

    // TODO: Omnibox integration
    "omnibox": { "keyword" : "REST" },

    // TODO: crbug.com/25317
    "options_page": "options.html",

    "permissions": [
        "*://*/*",
    ],

    "optional_permissions": [
        "tabs",
        "history",
        "storage",
        "cookies",
        "webRequest",
        "contextMenus",
        "webNavigation",
        "clipboardRead",
        "clipboardWrite",
        "chrome://favicon/",

        // TODO: experimental + infobars?
    ]
}
